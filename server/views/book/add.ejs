<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
    
<!-- Content for the Add page-->
<div class="container">
    <div class="row">
        <div class="offset-md-2 col-md-8">
            <h1><%=title%></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">Title</label>
                    <input type="text" class="form-control" id="titleTextField" placeholder="Enter the book title" name="title" required/>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Author</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the author name" name="author" required/>
                </div>
                <div class="form-group">
                    <label for="yearTextField">Year</label>
                    <input type="text" class="form-control" id="yearTextField" placeholder="Enter published year" name="year" required/>
                </div>
                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <input type="text" class="form-control" id="descriptionTextField" placeholder="Enter the description" name="description" required/>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Price</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Enter the price" name="price" required/>
                </div>
                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                <a href="/book-list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> Cancel</a>    
            </form>
        </div>
    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

